{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "kube-aws Kubernetes cluster development",
  "Resources": {
    "Controlplane": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {},
        "Tags": [
          {
            "Key": "kubernetes.io/cluster/development",
            "Value": "true"
          },
          {
            "Key": "Environment",
            "Value": "Development"
          },
          {
            "Key": "Name",
            "Value": "Kubernetes"
          }
        ],
        "TemplateURL": "https://s3.amazonaws.com/us-east-1-checkr-kubernetes-dev/kube-aws/clusters/development/exported/stacks/control-plane/stack.json"
      }
    },
    "Default": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "ControlPlaneStackName": {
            "Fn::GetAtt": [
              "Controlplane",
              "Outputs.StackName"
            ]
          }
        },
        "Tags": [
          {
            "Key": "kubernetes.io/cluster/development",
            "Value": "true"
          }
        ],
        "TemplateURL": "https://s3.amazonaws.com/us-east-1-checkr-kubernetes-dev/kube-aws/clusters/development/exported/stacks/default/stack.json"
      },
      "DependsOn": [
        "Controlplane"
      ]
    }
  },
  "Outputs": {
    "KubeAwsVersion": {
      "Description": "The version number of kube-aws which was used to create this cluster",
      "Value": "41c71c741227b82818aa47359a0ced2913588d6e",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-KubeAwsVersion"
        }
      }
    },
    "ControllerIAMRoleArn": {
      "Description": "The IAM Role ARN for controller nodes",
      "Value": {
        "Fn::GetAtt": [
          "Controlplane",
          "Outputs.ControllerIAMRoleArn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ControllerIAMRoleArn"
        }
      }
    },
    "ControlPlaneStackName": {
      "Description": "The name of the control plane stack",
      "Value": {
        "Fn::GetAtt": [
          "Controlplane",
          "Outputs.StackName"
        ]
      }
    },
    "NodePoolDefaultWorkerIAMRoleArn": {
      "Description": "The IAM Role ARN for workers in the Default node pool stack",
      "Value": {
        "Fn::GetAtt": [
          "Default",
          "Outputs.WorkerIAMRoleArn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-NodePoolDefaultWorkerIAMRoleArn"
        }
      }
    },
    "NodePoolDefaultStackName": {
      "Description": "The name of the Default node pool stack",
      "Value": {
        "Fn::GetAtt": [
          "Default",
          "Outputs.StackName"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-NodePoolDefaultStackName"
        }
      }
    }
  }
}
